# Broca 2 Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# BASE INSTALLATION VARIABLES (shared across all agent instances)
# =============================================================================

# Telegram API Configuration (required for Telegram plugins)
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_PHONE=+1234567890

# Telegram Bot Configuration (required for Telegram bot plugin)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_OWNER_ID=123456789
TELEGRAM_OWNER_USERNAME=your_username

# Telegram Session Configuration (optional)
TELEGRAM_SESSION_STRING=
TELEGRAM_MESSAGE_MODE=echo
TELEGRAM_BUFFER_DELAY=5
TELEGRAM_AUTO_SAVE_SESSION=true

# =============================================================================
# AGENT-SPECIFIC VARIABLES (per agent instance)
# =============================================================================

# Letta Agent Configuration (required for live mode)
AGENT_ID=your-agent-id-here
AGENT_ENDPOINT=https://api.letta.ai
AGENT_API_KEY=your_letta_api_key_here

# Agent Runtime Configuration (optional)
DEBUG_MODE=false
MESSAGE_MODE=live
QUEUE_REFRESH=5
MAX_RETRIES=3

# =============================================================================
# LOGGING CONFIGURATION (optional)
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Base Installation Variables:
#    - These are shared across all agent instances
#    - Place in the root .env file
#    - Required for Telegram functionality
#
# 2. Agent-Specific Variables:
#    - Each agent instance needs its own .env file
#    - Place in agent-{uuid}/.env
#    - AGENT_ID must be unique per agent
#
# 3. Message Modes:
#    - live: Full processing through Letta agent
#    - echo: Simple echo without agent processing
#    - listen: Store messages without processing
#
# 4. Telegram Configuration:
#    - Get API credentials from https://my.telegram.org
#    - Bot token from @BotFather
#    - Session string is auto-generated on first run
#
# 5. Letta Configuration:
#    - Get API credentials from your Letta dashboard
#    - AGENT_ID should match your Letta agent configuration
#
